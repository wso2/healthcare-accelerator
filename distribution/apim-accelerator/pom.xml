                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>cleanup</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <tasks>
                                <property name="temp_dir" value="target/temp" />
                                <property name="dist_dir" value="target/dist" />
                                <!--cleanup-->
                                <delete dir="${temp_dir}"/>
                                <delete dir="${dist_dir}"/>
                            </tasks>
